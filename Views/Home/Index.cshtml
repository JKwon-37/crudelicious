@{
    ViewData["Title"] = "Home Page";
}
@model List<Dish>

<div class="text-center mb-5">
    <h1 class="display-4">Welcome to CRUDelicious</h1>
</div>

<div class="d-flex justify-content-between mx-5">
    <h3>Check out some recent dishes!</h3>
    <a class="btn-primary text-decoration-none align-items-center p-2" href="dish/new">Add a Dish!</a>
</div>

<div class="mx-5">
    @foreach (Dish d in Model)
    {
        <a 
        asp-controller="Home"
        asp-action="ViewDish"
        asp-route-id="@d.DishId"
        >@d.Name</a><p> by @d.Chef</p>
    }
</div>
